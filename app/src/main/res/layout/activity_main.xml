<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView

        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/card_background"
        android:gravity="center"
        android:text="How long did The Hundred Years' War last?"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:elevation="8dp"
        />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#A6EC56"
        android:gravity="center"
        android:text="116 years"
        android:textColor="#5B676E"
        android:textSize="40sp"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/firstChoice"
        android:layout_width="390dp"
        android:layout_height="65dp"
        android:layout_below="@+id/flashcard_question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="#99CAF1"
        android:gravity="center"
        android:text="102 years"
        android:textSize="35sp" />


    <TextView
        android:id="@+id/secondChoice"
        android:layout_below="@id/firstChoice"
        android:layout_width="390dp"
        android:layout_height="65dp"
        android:background="#99CAF1"
        android:gravity="center"
        android:text="100 years"
        android:textSize="35sp"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/thirdChoice"
        android:layout_below="@id/secondChoice"
        android:layout_width="390dp"
        android:layout_height="65dp"
        android:background="#99CAF1"
        android:gravity="center"
        android:text="116 years"
        android:textSize="35sp"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/toggle_choices_visibility"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_iconmonstr_eye_off_lined" />

    <ImageView
        android:id="@+id/toggle_choices_blind"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_iconmonstr_eye_lined" />

</RelativeLayout>